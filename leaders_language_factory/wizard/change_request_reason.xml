<?xml version="1.0"?>
<odoo>
        <record id="task_change_request_view_form" model="ir.ui.view">
            <field name="name">change.request.reason.form</field>
            <field name="model">change.request.reason</field>
            <field name="arch" type="xml">
                <form string="Change Request Reason">
                    <group>
                        <field name="change_request_reason" options="{'no_create_edit': False}"  string="Refuse Reason"/>
                    </group>
                    <footer>
                        <button name="action_refuse_task" string="Mark as Change Requested" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="change_request_action" model="ir.actions.act_window">
            <field name="name">Refuse</field>
            <field name="res_model">change.request.reason</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="task_change_request_view_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="project.model_project_task"/>
            <field name="context">{
                'dialog_size' : 'medium',

            }</field>
        </record>
</odoo>
