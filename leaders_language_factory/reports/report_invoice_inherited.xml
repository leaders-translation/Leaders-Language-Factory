<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="account_invoice_report_inherited" inherit_id="account.report_invoice_document">

            <xpath expr="//div//div//h2" position="replace">

             </xpath>
            <xpath expr="//div[@class='row']" position="replace">
                <h4 style="
                   text-align: center;
                  "
                  ><span>TAX INVOICE - فاتورة ضريبية</span>
                </h4>
            </xpath>

            <xpath expr="//div[@id='informations']" position="replace">
                  <div id="informations" class="row">
                      <div class="col-6">
                          <h6>Bill to (فاتورة الأمر)</h6>
                          <p style="font-weight:bold" t-field="o.partner_id"></p>
                      </div>
                      <div class="col-6">
                         <table class="table">
                          <tbody>
                            <tr>
                              <td style="padding:10px; background-color:#F5F5F5;color: black;">Invoice No (رقم الفاتورة)</td>
                              <td style="padding:10px;background-color:#ffffff; color: black;"> <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span></td>
                            </tr>
                            <tr>
                              <td style="padding:10px;  background-color:#F5F5F5;color: black;" >Invoice Date (تاريخ الفاتورة)</td>
                             <td style="padding:10px;background-color:#ffffff; color: black;"><span t-field="o.invoice_date">2023-09-12</span></td>
                            </tr>
                            <tr>
                              <td style="padding:10px; background-color:#F5F5F5;color: black;">Payment Terms (شروط الدفع)</td>
                              <td style="padding:10px;background-color:#ffffff; color: black;">  <span id="payment_terms_note_id"
                                          t-if="o.invoice_payment_term_id.note"
                                          t-field="o.invoice_payment_term_id.note"
                                          name="payment_term"></span></td>
                            </tr>
                              <tr>
                              <td style="padding:10px; background-color:#F5F5F5;  color: black;">Due Date (تاريخ الاستحقاق)</td>
                              <td style="padding:10px; background-color:#ffffff; color: black;"><span t-field="o.invoice_date_due">2023-10-31</span></td>
                            </tr>
                          </tbody>
                         </table>
                               <table class="table">
                          <tbody>
                            <tr>
                             <td style="padding:10px; background-color:#F5F5F5;color: black;">Client Ref No (الرقم المرجعي للعميل)</td>
                             <td style="padding:10px;background-color:#ffffff; color: black;"> <span>Document</span></td>
                            </tr>
                            <tr>
                              <td style="padding:10px; background-color:#F5F5F5;color: black;">Delivery Date (تاريخ التسليم)</td>
                              <td style="padding:10px;background-color:#ffffff; color: black;"></td>
                            </tr>

                             <tr>
                              <td style="padding:10px; background-color:#F5F5F5;  color: black;">Delivery Time (وقت التسليم)</td>
                             <td style="padding:10px; background-color:#ffffff; color: black;" ></td>
                            </tr>


                          </tbody>
                         </table>
                          <br></br>
                      </div>
                  </div>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']" position="replace">
                 <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_description" class="text-start"><span>Service &amp; Description (وصف الخدمة)</span></th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_language_pairs" class="text-start"><span>Lang Pairs (اللغات)</span></th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_timeline" class="text-start"><span>Timeline (الخط الزمني)</span></th>
                        <th  style="padding:10px; background-color:#F5F5F5;" name="th_quantity" class="text-end"><span>QTY (الكمية)</span></th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_priceunit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Rate (السعر)</span></th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>VAT (<span t-field="o.company_id.sale_tax_id.name"/>) ( ضريبة القيمة المضافة )</span></th>
                        <th style="padding:10px; background-color:#F5F5F5;" name="th_subtotal" class="text-end">
                            <span>Amount (القيمة)</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_total" t-value="0"/>
                           <t t-set="i" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">
                                     <t t-set="i" t-value="1+i"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td>
														<span t-esc="i"/>
													</td>
                                            <td style="padding:10px;" name="account_invoice_line_name"><span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"></span></td>
                                            <td style="padding:10px;" name="lang"><span t-if="line.language_pair" t-field="line.language_pair"></span></td>
                                            <td style="padding:10px;" ><span ></span></td>

                                            <td style="padding:10px;" name="td_quantity" class="text-end">
                                                <span t-field="line.quantity">3.00</span>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom">units</span>
                                            </td>
                                            <td style="padding:10px;" name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                                            </td>

                                            <td style="padding:10px;" name="td_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-out="', '.join(map(lambda x: (x.invoice_label or x.name), line.tax_ids))" id="line_tax_ids">Tax 15%</span>
                                            </td>
                                            <td style="padding:10px;" name="td_subtotal" class="text-end o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                                            </td>
                                        </t>
                                        <t t-elif="line.display_type == 'line_section'">
                                            <td style="padding:10px;" colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-elif="line.display_type == 'line_note'">
                                            <td style="padding:10px;" colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td style="padding:10px;" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-out="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                >31.05</span>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                 </table>
            </xpath>
             <xpath expr="//div[@id='payment_term']" position="replace">
             </xpath>
            <xpath expr="//div[@id='right-elements']" position="replace">
                    <div id="right-elements" t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                                <div id="total" class="clearfix row">
                                    <div class="ms-auto">
                                        <table class="table table-sm table-borderless avoid-page-break-inside">

                                            <!--Tax totals-->
                                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                                            <t t-call="account.document_tax_totals"/>

                                            <!--Payments-->
                                            <t t-if="print_with_payments">
                                                <t t-if="o.payment_state != 'invoicing_legacy'">
                                                    <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                                        <tr t-if="payment_vals['is_exchange'] == 0">
                                                            <td>
                                                                <i class="oe_form_field text-end oe_payment_label">Paid on <t t-out="payment_vals['date']" t-options='{"widget": "date"}'>2021-09-19</t></i>
                                                            </td>
                                                            <td class="text-end">
                                                                <span style="color:red;" t-out="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'>20.00</span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                    <t t-if="len(payments_vals) > 0">
                                                        <tr class="border-black fw-bold">
                                                            <td>Balance Due (الرصيد المستحق)</td>
                                                            <td class="text-end">
                                                                <span t-field="o.amount_residual">11.05</span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </t>
                                            </t>
                                        </table>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <p class="text-end lh-sm" t-if="o.company_id.display_invoice_amount_total_words">
                                        Total amount in words: <br/>
                                        <small class="text-muted lh-sm"><span t-field="o.amount_total_words">Thirty one dollar and Five cents</span></small>
                                    </p>
                                </div>
                                <t t-call="account.document_tax_totals_company_currency_template"/>
                            </div>

             </xpath>
        </template>
    </data>
</odoo>